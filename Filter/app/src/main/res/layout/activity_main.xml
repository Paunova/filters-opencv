<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <org.opencv.android.JavaCameraView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone"
        android:id="@+id/HelloOpenCvView"
        opencv:show_fps="true"
        opencv:camera_id="any" />

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="300dp"
        android:layout_gravity="right" >
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_filter1"
            android:text="Filter1"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/btn_filter1"
            android:id="@+id/btn_filter2"
            android:text="Filter2"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/btn_filter2"
            android:id="@+id/btn_filter3"
            android:text="Filter3"/>
    </RelativeLayout>

</FrameLayout>